@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>

<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizzas.PizzaName" placeholder="Give your pizza a name..."/><br/>
        <input type="checkbox" asp-for="Pizzas.TomatoSauce" placeholder="Tomato Sauce"/> Tomato Sauce <br/>
        <input type="checkbox" asp-for="Pizzas.Cheese" placeholder="Cheese"/> Cheese <br/>
        <input type="checkbox" asp-for="Pizzas.Peperoni" placeholder="Peperoni" /> Peperoni <br />
        <input type="checkbox" asp-for="Pizzas.Mushroom" placeholder="Mushroom" /> Mushroom <br />
        <input type="checkbox" asp-for="Pizzas.Tuna" placeholder="Tuna" /> Tuna <br />
        <input type="checkbox" asp-for="Pizzas.Pineapple" placeholder="Pineapple" /> Pineapple <br />
        <input type="checkbox" asp-for="Pizzas.Ham" placeholder="Ham" /> Ham <br />
        <input type="checkbox" asp-for="Pizzas.Beef" placeholder="Beef" /> Beef <br />
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>
